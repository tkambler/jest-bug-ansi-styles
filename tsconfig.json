{
    "compilerOptions": {
      "baseUrl": ".",
      "target": "es5",
      "module": "commonjs",
      "lib": ["dom", "es2015", "es2016", "es2017", "es2018"],
      "sourceMap": true,
      "allowJs": true,
      "jsx": "react",
      "strict": false,
      "noImplicitAny": false,
      "esModuleInterop": true,
      "outDir": "build",
      "allowSyntheticDefaultImports": true
    },
    "include": ["./typings/**/*.d.ts"],
    "exclude": ["node_modules"]
  }
  